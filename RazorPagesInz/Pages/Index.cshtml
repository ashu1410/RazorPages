@page
@model IndexModel
@{
    ViewData["Title"] = "Zostań programistą!";
}

<form method="get">
    <div class="input-group">
        <input class="form-control" asp-for="searchPhrase" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Wyszukaj</button>
        </div>
    </div>
</form>

<div class="card-deck">
    @if (@Model.searchPhrase != null)
    {
        @foreach (var res in Model.resPages)
        {
            var imgpath = res.Img_path;
            <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
                <img src="@imgpath" class="card-img-top-thumb" asp-append-version="true">
                <div class="card-body">
                    <h5 class="card-title">@res.Title</h5>
                    <a href="@res.Link" class="btn btn-primary m1 text-center">Przejdz do materiału</a>
                </div>
            </div>
        }
    }
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/resources/web.jpg" alt="Web">
            <div class="carousel-caption d-none d-md-block">
                <h5>Technologie Webowe</h5>
                <p>CSS, HTML, JavaScript, PHP, NodeJs</p>
            </div>

        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/resources/db.png" alt="Bazy danych">
            <div class="carousel-caption d-none d-md-block">
                <h5>Bazy danych</h5>
                <p>SQL, Oracle, MongoDB</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/resources/os1.jpg" alt="Linux Windows">
            <div class="carousel-caption d-none d-md-block">
                <h5>Administracja</h5>
                <p>Linux, Windows</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/resources/desktop.jpg" alt="Języki programowania">
            <div class="carousel-caption d-none d-md-block">
                <h5>Języki programowania</h5>
                <p>Java, C/C++, C#, Python</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>